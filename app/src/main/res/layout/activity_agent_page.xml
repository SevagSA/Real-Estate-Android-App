<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.AgentActivity">

    <include
        android:id="@+id/include2"
        layout="@layout/activity_action_bar" />

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dtvancouver"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-31dp" />

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="136dp"
        android:layout_height="153dp"
        android:layout_marginTop="115dp"
        app:layout_constraintTop_toBottomOf="@+id/include2"
        app:srcCompat="@drawable/agent_profile_img"
        tools:layout_editor_absoluteX="137dp" />

    <TextView
        android:id="@+id/agentName"
        android:layout_width="257dp"
        android:layout_height="30dp"
        android:layout_marginTop="69dp"
        android:gravity="center"
        android:text="Firstname Lastname"
        android:textSize="23dp"
        app:layout_constraintTop_toBottomOf="@+id/profileImage"
        tools:layout_editor_absoluteX="77dp" />

    <TextView
        android:id="@+id/agentCompany"
        android:layout_width="150dp"
        android:layout_height="24dp"
        android:gravity="center"
        android:text="Company XYZ"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@+id/agentName"
        tools:layout_editor_absoluteX="130dp" />

    <TextView
        android:id="@+id/agentEmail"
        android:layout_width="150dp"
        android:layout_height="24dp"
        android:gravity="center"
        android:text="test123@email.com"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@+id/agentCompany"
        tools:layout_editor_absoluteX="130dp" />

    <TextView
        android:id="@+id/agentPhone"
        android:layout_width="150dp"
        android:layout_height="24dp"
        android:gravity="center"
        android:text="514)123-4567"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@+id/agentEmail"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="490dp" />

    <TextView
        android:id="@+id/soldNumber"
        android:layout_width="103dp"
        android:layout_height="20dp"
        android:layout_marginStart="103dp"
        android:layout_marginLeft="103dp"
        android:gravity="center"
        android:text="Sold number:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundImage" />

    <TextView
        android:id="@+id/soldCounter"
        android:layout_width="103dp"
        android:layout_height="20dp"
        android:layout_marginEnd="102dp"
        android:layout_marginRight="102dp"
        android:gravity="center"
        android:text="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundImage" />
</androidx.constraintlayout.widget.ConstraintLayout>