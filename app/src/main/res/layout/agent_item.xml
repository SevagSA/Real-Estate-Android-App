<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/agent_grid_item"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f3f3f3f3"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/agentImg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/olivia_james" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/agentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agent Name"
                android:textColor="@color/h1TitleBlack"
                android:textSize="@dimen/h1Title" />

            <TextView
                android:id="@+id/agentEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/complementaryBlue"
                android:layout_marginBottom="5dp"
                android:text="olivia@gmail.com"/>

            <TextView
                android:id="@+id/agentCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/complementaryBlue"
                android:text="High Rise Estates"/>


            <Button
                android:id="@+id/viewAgentBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/view_agent"
                android:textSize="@dimen/btn_big"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:backgroundTint="@color/btnColor" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>