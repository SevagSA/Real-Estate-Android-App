<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.realestateapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RealEstateApplication">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity android:name=".Controllers.SearchPropertyActivity" />
        <activity android:name=".Controllers.AgentActivity" />
        <activity android:name=".Controllers.LoginActivity" />
        <activity android:name=".Controllers.ListPropertyActivity" />
        <activity android:name=".Controllers.HomeActivity" />
        <activity android:name=".Controllers.LanguageSelectActivity" />
        <activity android:name=".Controllers.PropertyDetailActivity" />
        <activity android:name=".Controllers.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>